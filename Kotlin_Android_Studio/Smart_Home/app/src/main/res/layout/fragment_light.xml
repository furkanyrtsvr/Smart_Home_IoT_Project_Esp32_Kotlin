<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.light.lightFragment">

    <TextView
        android:id="@+id/text_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





    <ImageView
        android:id="@+id/led_off_photo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/led_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="65dp"
        android:layout_marginStart="50dp"
        android:visibility="gone"/>



    <ImageView
        android:id="@+id/led_on_photo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/led_on"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="65dp"
        android:layout_marginStart="50dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textled1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blink"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="139dp"
        android:layout_marginStart="66dp"/>


    <ImageView
        android:id="@+id/diode"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/diode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/color_picker_button"
        android:layout_width="68dp"
        android:layout_height="28dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="136dp"
        android:text="Renk SeÃ§"
        android:textColor="@android:color/white"
        android:textSize="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>