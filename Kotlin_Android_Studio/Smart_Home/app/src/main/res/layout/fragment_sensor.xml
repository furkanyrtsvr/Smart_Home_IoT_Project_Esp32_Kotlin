<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sensor.sensorFragment">


    <ImageView
        android:id="@+id/sensor_lcd"
        android:layout_width="128dp"
        android:layout_height="70dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/_6x2_lcd_with_iicmodule"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/sensor_co2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="285dp"
        android:layout_marginTop="272dp"
        android:src="@drawable/sensor_co2"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sensor_motion"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="272dp"
        android:src="@drawable/sensor_motion"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sensor_servo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="480dp"
        android:src="@drawable/servo"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/servo_seekbar"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:min="0"
        android:max="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sensor_servo" />

    <ImageView
        android:id="@+id/sensor_fire"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="285dp"
        android:layout_marginTop="480dp"
        android:src="@drawable/sensor_fire"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sensor_temp"
        android:layout_width="95dp"
        android:layout_height="83dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/temperature_control"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lcd_text"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Hello \nWorld "
        android:textSize="11sp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="2"
        />

    <TextView
        android:id="@+id/servo_angle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/servo_seekbar"
        app:layout_constraintTop_toTopOf="@+id/servo_seekbar"/>


    <EditText
        android:id="@+id/input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter text to display"
        android:textSize="10sp"
        android:layout_marginStart="10dp"
        android:selectAllOnFocus="true"
        app:layout_constraintStart_toStartOf="@+id/sensor_lcd"
        app:layout_constraintTop_toBottomOf="@+id/sensor_lcd"/>

    <TextView
        android:id="@+id/text_pir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View motionlog"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/sensor_motion"
        app:layout_constraintTop_toBottomOf="@+id/sensor_motion"
        />

    <Switch
        android:id="@+id/lcd_manuel"
        android:layout_width="51dp"
        android:layout_height="30dp"
        android:switchMinWidth="5dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="165dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/manuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manuel"
        android:textSize="10sp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="172dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="10sp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="172dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="36"
        android:textColor="#040405"
        android:fontFamily="sans-serif-medium"
        android:textSize="19dp"
        android:layout_marginStart="296dp"
        android:layout_marginTop="85dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    />

    <TextView
        android:id="@+id/hum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="322dp"
        android:layout_marginTop="153dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hum: %"
        android:layout_marginStart="276dp"
        android:layout_marginTop="153dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/co2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="285dp"
        android:layout_marginTop="341dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="285dp"
        android:layout_marginTop="548dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    />

</androidx.constraintlayout.widget.ConstraintLayout>